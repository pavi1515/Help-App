

ScreenManager:
    Page1:
    Page2:
    Page3:
    Page4:
    Page5:
    Page7:
<Page1>:
    name:'page1'
    MDScreen:
        md_bg_color:[100/255,150/255,154/255,1]
        
        MDCard:
            size_hint:None,None
            size:1000,1050
            md_bg_color:[150/255,250/255,255/255,1]
            pos_hint:{"center_x":.5,"center_y":.5}
            elevation:0
            padding:100
            spacing:100
            orientation:'vertical'
            MDLabel:
                text:'HELP App'
                font_style:'Button'
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
                font_size:80
            
        
            MDRectangleFlatButton:
                text:'LOGIN'
                pos_hint:{"center_x":.5}
                font_size:50
                on_press:root.manager.current='page2'
            MDRectangleFlatButton:
                text:'REGISTER'
                pos_hint:{"center_x":.5}
                font_size:50
                on_press:root.manager.current='page3'
            MDRectangleFlatButton:
                text:'Help App Guide'
                pos_hint:{"center_x":.5}
                font_size:50
                on_press:root.manager.current='page7'         
            Widget:
                size_hint_y:None
                height:  30 
                   
<Page2>:
    name:'page2'
    MDScreen:
        md_bg_color:[120/255,150/255,154/255,1]
        
        MDCard:
            size_hint:None,None
            size:1000,1050
            md_bg_color:[155/255,250/255,255/255,1]
            pos_hint:{"center_x":.5,"center_y":.5}
       
            padding:125
            spacing:128
            orientation:'vertical'
            MDLabel:
                text:'Login'
                font_style:'Button'
                size_hint_y:None
                height:self.texture_size[1]
                halign:'center'
                font_size:60
            
            MDTextField:
                id: username
                hint_text:'USERNAME'    
                icon_right:'account'
                width:200
                size_hint_x:None
                font_size:50
                pos_hint:{"center_x":.5}
            MDTextField:
                property: round
                id: password
                hint_text:'password'    
                icon_right:'eye-off'
                width:200
                size_hint_x:None
                font_size:50
                pos_hint:{"center_x":0.5}   
                password:True 
            MDRectangleFlatButton:
                id: pavibutton
                text:'LOGIN'
                pos_hint:{"center_x":.5}
                font_size:50
                on_state:if (app.login_user())==True: root.manager.current='page5'
                on_state:if (app.login_user())==False: root.manager.current='page1'                 

                
            Widget:
                size_hint_y:None
                height:  30      
                  
    
                
            
              
                

